{
  "manifest_version": 2,
  "name": "NoMouse Challenge",
  "version": "1.0.0",
  "description": "Hides the cursor from the web page. This can be used for the #NoMouse challenge.",
  "author": "John Pham <johnphammail@gmail.com>",
  "homepage_url": "https://github.com/JohnPhamous/no-mouse-challenge-extension",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "300": "icon300.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
